---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "A digital garden exploring photography, writing, and music" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Pro:wght@400;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playpen+Sans:wght@100..800&display=swap" rel="stylesheet">
    <style is:global>
      /* CSS Variables */
      :root {
        --color-primary: #215DB1;
        --color-cream: #F0EEE9;
        --color-accent: #DB4E66;
        --color-text: #1a1a1a;
        --font-body: 'Crimson Pro', Georgia, serif;
        --font-ui: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', sans-serif;
        --max-width: 1200px;
        --spacing-unit: 1rem;
      }

      [data-theme="dark"] {
        --color-cream: #1a1a1a;
        --color-text: #F0EEE9;
        --color-primary: #4a8ed9;
        --color-accent: #ff6b85;
      }

      /* Reset & Base Styles */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html {
        scroll-behavior: smooth;
      }

      body {
        font-family: var(--font-body);
        background: var(--color-cream);
        color: var(--color-text);
        line-height: 1.7;
        font-size: 18px;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }

      /* Typography */
      h1, h2, h3, h4, h5, h6 {
        font-family: var(--font-body);
        font-weight: 700;
        line-height: 1.2;
        margin-bottom: 1rem;
        color: var(--color-text);
      }

      h1 {
        font-size: clamp(2.5rem, 5vw, 4rem);
        margin-bottom: 1.5rem;
        letter-spacing: -0.02em;
      }

      h2 {
        font-size: clamp(2rem, 4vw, 3rem);
        margin-top: 2.5rem;
        margin-bottom: 1rem;
      }

      h3 {
        font-size: clamp(1.5rem, 3vw, 2rem);
        margin-top: 2rem;
      }

      p {
        margin-bottom: 1.5rem;
      }

      a {
        color: var(--color-primary);
        text-decoration: none;
        transition: color 0.2s ease;
      }

      a:hover {
        color: var(--color-accent);
      }

      /* Links in body text */
      .content a,
      article a:not(.tag):not(.read-more) {
        text-decoration: underline;
        text-decoration-thickness: 1px;
        text-underline-offset: 2px;
      }

      .content a:hover,
      article a:hover {
        color: var(--color-accent);
      }

      /* Images */
      img {
        max-width: 100%;
        height: auto;
        display: block;
      }

      /* Blockquotes */
      blockquote {
        border-left: 4px solid var(--color-primary);
        padding-left: 1.5rem;
        margin: 2rem 0;
        font-style: italic;
        opacity: 0.9;
      }

      /* Code */
      code {
        font-family: 'Monaco', 'Courier New', monospace;
        background: rgba(0, 0, 0, 0.05);
        padding: 0.2em 0.4em;
        border-radius: 3px;
        font-size: 0.9em;
      }

      pre {
        background: rgba(0, 0, 0, 0.05);
        padding: 1.5rem;
        border-radius: 6px;
        overflow-x: auto;
        margin: 2rem 0;
      }

      pre code {
        background: none;
        padding: 0;
      }

      /* Lists */
      ul, ol {
        margin-left: 2rem;
        margin-bottom: 1.5rem;
      }

      li {
        margin-bottom: 0.5rem;
      }

      /* Embedded content (iframes, videos) */
      iframe {
        max-width: 100%;
        margin: 2rem 0;
      }
    </style>
  </head>
  <body>
    <div class="site-container">
      <header class="site-header">
        <nav class="main-nav">
          <ul>
            <li><a href="/" class="nav-link">home</a></li>
            <li><a href="/postcards" class="nav-link">postcards</a></li>
            <li><a href="/writing" class="nav-link">writing</a></li>
            <li><a href="/music" class="nav-link">music</a></li>
            <li><a href="/about" class="nav-link">about</a></li>
          </ul>
        </nav>
      </header>

      <main class="site-main">
        <slot />
      </main>

      <footer class="site-footer">
        <p>A digital garden cultivated with care. No analytics, no tracking, just words and images.</p>
        <p class="footer-links">
          <a href="/writing/rss.xml">RSS (Writing)</a> · 
          <a href="/photography/rss.xml">RSS (Photos)</a> · 
          <a href="/rss.xml">RSS (All)</a>
        </p>
      </footer>
    </div>

    <style>
      .site-container {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        padding: 2rem 3rem;
      }

      .site-header {
        margin-bottom: 4rem;
        padding-bottom: 2rem;
        border-bottom: 2px solid var(--color-text);
      }

      .main-nav ul {
        list-style: none;
        display: flex;
        gap: 2rem;
        flex-wrap: wrap;
        margin: 0;
      }

      .main-nav li {
        margin: 0;
      }

      .nav-link {
        font-family: var(--font-ui);
        font-weight: 600;
        font-size: 1rem;
        text-transform: lowercase;
        letter-spacing: 0.02em;
        position: relative;
        padding-bottom: 0.2rem;
      }

      .nav-link::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 2px;
        background: var(--color-accent);
        transition: width 0.3s ease;
      }

      .nav-link:hover::after {
        width: 100%;
      }

      .site-main {
        flex: 1;
        margin-bottom: 4rem;
      }

      .site-footer {
        border-top: 2px solid var(--color-text);
        padding-top: 2rem;
        font-family: var(--font-ui);
        font-size: 0.9rem;
        opacity: 0.8;
      }

      .site-footer p {
        margin-bottom: 0.5rem;
      }

      .footer-links {
        font-size: 0.85rem;
      }

      .footer-links a {
        margin: 0 0.25rem;
      }

      /* Responsive */
      @media (max-width: 768px) {
        .site-container {
          padding: 1.5rem 2rem;
        }

        .site-header {
          margin-bottom: 3rem;
        }

        .main-nav ul {
          gap: 1.5rem;
        }

        .nav-link {
          font-size: 0.95rem;
        }

        body {
          font-size: 17px;
        }

        h1 {
          margin-bottom: 1rem;
        }
      }

      @media (max-width: 480px) {
        .site-container {
          padding: 1rem;
        }

        .main-nav ul {
          gap: 1rem;
        }

        body {
          font-size: 16px;
        }
      }
    </style>
  </body>
</html>