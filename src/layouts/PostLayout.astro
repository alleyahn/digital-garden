---
import BaseLayout from './BaseLayout.astro';
import { Image } from 'astro:assets';

interface Props {
  title: string;
  date: Date;
  type: string;
  author?: string;
  excerpt?: string;
  tags?: string[];
  featured_image?: any;
}

const { title, date, type, author, excerpt, tags, featured_image } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout title={title} description={excerpt}>
  <article class="post">
    <header class="post-header">
      <h1>{title}</h1>
      <p class="meta">
        A(n) <a href={`/writing/type/${type}`} class="type-link">{type}</a> published on <time datetime={date.toISOString()}>{formattedDate}</time>{author && <> by {author}</>}
      </p>
      {tags && tags.length > 0 && (
        <div class="tags">
          {tags.map(tag => (
            <a href={`/tags/${tag}`} class="tag">#{tag}</a>
          ))}
        </div>
      )}
    </header>

    {featured_image && (
      <div class="featured-image">
        <Image src={featured_image} alt={title} />
      </div>
    )}

    <div class="content">
      <slot />
    </div>

    <footer class="post-footer">
      <p class="feedback-prompt">
        Have thoughts on this? 
        <a href={`mailto:your-email@example.com?subject=Re: ${title}`} class="email-link">
          Email me your thoughts
        </a>
      </p>
      <nav class="post-nav">
        <a href="/writing" class="back-link">‚Üê Back to writing</a>
      </nav>
    </footer>
  </article>

  <style>
    .post {
      max-width: 700px;
      margin: 0 auto;
    }

    .post-header {
      margin-bottom: 3rem;
    }

    .post-header h1 {
      margin-bottom: 1rem;
      line-height: 1.1;
    }

    .meta {
      font-family: var(--font-ui);
      font-size: 1rem;
      opacity: 0.8;
      margin-bottom: 1.5rem;
      line-height: 1.6;
    }

    .meta time {
      font-style: normal;
      opacity: 1;
    }

    .type-link {
      color: var(--color-primary);
      font-weight: 600;
      text-decoration: underline;
      text-decoration-thickness: 2px;
      text-underline-offset: 2px;
      transition: all 0.2s ease;
    }

    .type-link:hover {
      color: var(--color-accent);
      text-decoration-thickness: 3px;
    }

    .tags {
      display: flex;
      gap: 0.75rem;
      flex-wrap: wrap;
    }

    .tag {
      font-family: var(--font-ui);
      font-size: 0.9rem;
      padding: 0.5rem 1rem;
      background: var(--color-cream);
      border: 2px solid var(--color-text);
      border-radius: 4px;
      transition: all 0.2s ease;
      font-weight: 500;
    }

    .tag:hover {
      background: var(--color-primary);
      color: var(--color-cream);
      border-color: var(--color-primary);
      transform: translateY(-2px);
    }

    .featured-image {
      margin-bottom: 3rem;
      border: 2px solid var(--color-text);
      overflow: hidden;
    }

    .featured-image img {
      width: 100%;
      height: auto;
      display: block;
    }

    .content {
      font-size: 1.15rem;
      line-height: 1.8;
      margin-bottom: 4rem;
    }

    /* First paragraph styling */
    .content :global(p:first-child) {
      font-size: 1.3rem;
      line-height: 1.7;
      margin-bottom: 2rem;
    }

    /* Headings in content */
    .content :global(h2) {
      font-size: 1.75rem;
      margin-top: 3rem;
      margin-bottom: 1.25rem;
    }

    .content :global(h3) {
      font-size: 1.4rem;
      margin-top: 2.5rem;
      margin-bottom: 1rem;
    }

    /* Blockquotes */
    .content :global(blockquote) {
      border-left: 4px solid var(--color-primary);
      padding-left: 2rem;
      margin: 2.5rem 0;
      font-style: italic;
      font-size: 1.2rem;
      opacity: 0.9;
    }

    /* Links in content */
    .content :global(a) {
      color: var(--color-primary);
      text-decoration: underline;
      text-decoration-thickness: 1px;
      text-underline-offset: 2px;
      transition: color 0.2s ease;
    }

    .content :global(a:hover) {
      color: var(--color-accent);
    }

    /* Lists */
    .content :global(ul),
    .content :global(ol) {
      margin: 1.5rem 0 2rem 2rem;
    }

    .content :global(li) {
      margin-bottom: 0.75rem;
    }

    /* Images in content */
    .content :global(img) {
      margin: 2.5rem 0;
      border: 2px solid var(--color-text);
    }

    /* Embedded iframes (Spotify, YouTube, etc) */
    .content :global(iframe) {
      margin: 2.5rem 0;
      border-radius: 12px;
    }

    .post-footer {
      margin-top: 4rem;
      padding-top: 2.5rem;
      border-top: 2px solid var(--color-text);
    }

    .feedback-prompt {
      font-family: var(--font-ui);
      font-size: 1rem;
      margin-bottom: 2rem;
      padding: 1.5rem;
      background: var(--color-cream);
      border: 2px solid var(--color-text);
      border-radius: 4px;
    }

    .email-link {
      color: var(--color-primary);
      font-weight: 600;
      text-decoration: underline;
      text-decoration-thickness: 2px;
      text-underline-offset: 2px;
      transition: color 0.2s ease;
    }

    .email-link:hover {
      color: var(--color-accent);
    }

    .post-nav {
      opacity: 0.6;
    }

    .back-link {
      font-family: var(--font-ui);
      font-size: 0.95rem;
      font-weight: 600;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      transition: all 0.2s ease;
    }

    .back-link:hover {
      opacity: 1;
      transform: translateX(-4px);
    }

    /* Responsive */
    @media (max-width: 768px) {
      .post {
        padding: 0 1rem;
      }

      .post-header {
        margin-bottom: 2rem;
      }

      .content {
        font-size: 1.05rem;
      }

      .content :global(p:first-child) {
        font-size: 1.2rem;
      }

      .content :global(h2) {
        font-size: 1.5rem;
        margin-top: 2.5rem;
      }

      .content :global(h3) {
        font-size: 1.25rem;
        margin-top: 2rem;
      }

      .content :global(blockquote) {
        font-size: 1.1rem;
        padding-left: 1.5rem;
      }

      .feedback-prompt {
        padding: 1.25rem;
        font-size: 0.95rem;
      }
    }

    @media (max-width: 480px) {
      .content {
        font-size: 1rem;
      }

      .content :global(p:first-child) {
        font-size: 1.15rem;
      }

      .meta {
        font-size: 0.9rem;
      }
    }
  </style>
</BaseLayout>