      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
      font-family: var(--font-ui);
      transition: border-color 0.2s ease;
      cursor: pointer;
    }

    .story-circle:hover {
      border-color: var(--color-primary);
    }

    .story-circle.empty {
      opacity: 0.3;
      position: relative;
    }

