---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

// Get recent writing posts (2 most recent)
const allWriting = await getCollection('writing');
const recentWriting = allWriting
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 2);

// Get featured photo (first one with featured: true, or most recent)
const allPhotos = await getCollection('photography');
const featuredPhoto = allPhotos.find(photo => photo.data.featured === true) || 
  allPhotos.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())[0];

// Get latest music track with rendered content
const allMusic = await getCollection('music');
const latestMusicEntry = allMusic.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())[0];
let latestMusic = null;
if (latestMusicEntry) {
  const { Content } = await latestMusicEntry.render();
  latestMusic = {
    ...latestMusicEntry,
    Content
  };
}
