    }

    .music-content :global(iframe) {
      width: 100%;
      max-width: 100%;
      margin: 1rem 0;
      border-radius: 8px;
    }

    .music-content :global(audio) {
      width: 100%;
      margin: 1rem 0;
    }

    .music-content :global(p) {
      margin-bottom: 0.75rem;
      font-size: 0.95rem;
    }

    .music-content :global(h2),
    .music-content :global(h3) {
      font-size: 1.1rem;
      margin-top: 1.5rem;
      margin-bottom: 0.5rem;
    }

    /* Misc Links Card */
    .misc-card {
      grid-column: span 1;
    }

    .misc-links {
      list-style: none;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }

    .misc-links li {
      margin: 0;
    }

    .misc-links a {
      font-size: 1rem;
      text-decoration: none;
      display: flex;
      align-items: center;
    }

    .misc-links a::before {
      content: '‚ñ∏';
      margin-right: 0.5rem;
      color: var(--color-accent);
    }

    .misc-links a:hover {
      text-decoration: underline;
    }

    /* Guestbook Card */
    .guestbook-card {
      grid-column: span 1;
    }

    .guestbook-embed {
      border-radius: 8px;
      overflow: hidden;
      border: 1px solid var(--color-text);
    }

    .guestbook-embed iframe {
      display: block;
    }

    /* View All Links */
    .view-all {
      display: inline-block;
      font-family: var(--font-ui);
      font-size: 0.9rem;
      font-weight: 600;
      color: var(--color-primary);
      text-decoration: none;
      margin-top: 1rem;
    }

    .view-all:hover {
      text-decoration: underline;
    }

    /* Responsive */
    @media (max-width: 1024px) {
      .homepage {
        grid-template-columns: 1fr;
      }

      .card {
        grid-column: span 1 !important;
      }

      .stories-card {
        grid-column: span 1 !important;
      }

      .three-column-grid {
        grid-template-columns: 1fr;
        grid-column: span 1;
      }
    }

    @media (max-width: 768px) {
      .homepage {
        gap: 1.5rem;
      }

      .card {
        padding: 1.5rem;
      }

      .site-title {
        font-size: 2.5rem;
      }
    }
  </style>
</body>
</html>