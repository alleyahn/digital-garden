      display: flex;
      flex-direction: column;
    }

    .recent-posts-card h2 {
      flex-shrink: 0;
    }

    .posts-list {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
      margin-bottom: 1.5rem;
      flex: 1;
    }

    .recent-posts-card .view-all {
