---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

// Get recent writing posts
const allWriting = await getCollection('writing');
const recentWriting = allWriting
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 2);

// Get featured photo
const allPhotos = await getCollection('photography');
const featuredPhoto = allPhotos.find(photo => photo.data.featured === true) || 
  allPhotos.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())[0];

// Get latest music tracks
const allMusic = await getCollection('music');
const latestMusicEntries = allMusic
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 2);

let latestMusicTracks = [];
for (const entry of latestMusicEntries) {
  const { Content } = await entry.render();
  latestMusicTracks.push({
    ...entry,
    Content
  });
}
