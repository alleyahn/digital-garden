      margin: 0;
    }

    /* Postcard Card */
    .postcard-card {
      grid-column: span 1;
      padding: 0;
      overflow: visible;
      position: relative;
      background: transparent;
      border: none;
    }

    .postcard-card:hover {
      transform: none;
      box-shadow: none;
    }

    .postcard-badge {
      position: absolute;
      top: 1rem;
      left: 1rem;
      background: var(--color-accent);
      color: white;
      padding: 0.4rem 0.8rem;
      border-radius: 20px;
      font-size: 0.85rem;
      font-weight: 600;
      font-family: var(--font-ui);
      z-index: 10;
    }

    .postcard-link-wrapper {
      position: relative;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
      transition: box-shadow 0.3s ease, transform 0.3s ease;
    }

    .postcard-link-wrapper:hover {
      box-shadow: 0 12px 28px rgba(0, 0, 0, 0.2);
      transform: translateY(-2px);
    }

    .postcard-image {
      width: 100%;
      height: auto;
      aspect-ratio: 3/2; /* 6:4 landscape by default */
      object-fit: cover;
      display: block;
      cursor: pointer;
    }

    /* Portrait postcard */
    .postcard-card[data-orientation="portrait"] .postcard-image {
      aspect-ratio: 2/3; /* 4:6 portrait */
    }

    .postcard-view-all {
      position: absolute;
      bottom: 1rem;
      right: 1rem;
      background: rgba(255, 255, 255, 0.95);
      color: var(--color-primary);
      padding: 0.5rem 1rem;
      border-radius: 6px;
      font-family: var(--font-ui);
      font-size: 0.85rem;
      font-weight: 600;
      text-decoration: none;
      transition: background 0.2s ease;
      border: 1px solid var(--color-text);
      z-index: 5;
    }

    .postcard-view-all:hover {
      background: white;
      color: var(--color-accent);
    }

    /* Music Card */
    .music-card {
      display: flex;
      flex-direction: column;
    }

    .music-card h2 {
      flex-shrink: 0;
    }

    .music-content {
      flex: 1;
      overflow-y: auto;
