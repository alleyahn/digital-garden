---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('writing');
  
  // Get all unique years
  const years = new Set<number>();
  posts.forEach(post => {
    years.add(post.data.date.getFullYear());
  });
  
  // Create a page for each year
  return Array.from(years).map(year => ({
    params: { year: year.toString() },
    props: { 
      year,
      posts: posts.filter(post => post.data.date.getFullYear() === year)
    }
  }));
}

const { year, posts } = Astro.props;

// Sort posts by date (newest first)
const sortedPosts = posts.sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);

// Get all tags for sidebar
const allPosts = await getCollection('writing');
const tagCounts = new Map<string, number>();
allPosts.forEach(post => {
  if (post.data.tags) {
    post.data.tags.forEach(t => {
      tagCounts.set(t, (tagCounts.get(t) || 0) + 1);
    });
  }
});

const sortedTags = Array.from(tagCounts.entries()).sort((a, b) => a[0].localeCompare(b[0]));

// Get years for sidebar
const yearCounts = new Map<number, number>();
allPosts.forEach(post => {
  const yr = post.data.date.getFullYear();
  yearCounts.set(yr, (yearCounts.get(yr) || 0) + 1);
});

const sortedYears = Array.from(yearCounts.entries()).sort((a, b) => b[0] - a[0]);
---

<BaseLayout title={`${year} - Writing`}>
  <div class="writing-page-container">
    <div class="writing-page">
      <header class="page-header">
        <div class="breadcrumb">
          <a href="/writing">‚Üê All Writing</a>
        </div>
        <h1>{year}</h1>
        <p class="intro">{sortedPosts.length} {sortedPosts.length === 1 ? 'post' : 'posts'} from <strong>{year}</strong></p>
      </header>

      <div class="post-list">
        {sortedPosts.map((post) => (
          <article class="post-preview">
            <h2>
              <a href={`/writing/${post.slug}`}>{post.data.title}</a>
            </h2>
            <div class="meta">
              <time datetime={post.data.date.toISOString()}>
                {post.data.date.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
              <span class="type-badge">{post.data.type}</span>
            </div>
            {post.data.excerpt && (
              <p class="excerpt">{post.data.excerpt}</p>
            )}
            {post.data.tags && post.data.tags.length > 0 && (
              <div class="tags">
                {post.data.tags.map(t => (
                  <a href={`/writing/tags/${t}`} class="tag">#{t}</a>
                ))}
              </div>
            )}
          </article>
        ))}
      </div>
    </div>

    <!-- Floating Sidebar with Tag and Year Cards -->
    <aside class="sidebar">
      <!-- Tags Card -->
      <div class="sidebar-card">
        <h3 class="card-header">Tags</h3>
        <nav class="card-content">
          {sortedTags.map(([t, count]) => (
            <a href={`/writing/tags/${t}`} class="sidebar-item">
              <span class="item-name">{t} ({count})</span>
            </a>
          ))}
        </nav>
      </div>

      <!-- Year Card -->
      <div class="sidebar-card">
        <h3 class="card-header">Year</h3>
        <nav class="card-content">
          {sortedYears.map(([yr, count]) => (
            <a 
              href={`/writing/year/${yr}`} 
              class={`sidebar-item ${yr === year ? 'active' : ''}`}
            >
              <span class="item-name">{yr} ({count})</span>
            </a>
          ))}
        </nav>
      </div>
    </aside>
  </div>

  <style>
    .writing-page-container {
      display: grid;
      grid-template-columns: 1fr 320px;
      gap: 4rem;
      max-width: 1200px;
      margin: 0 auto;
      position: relative;
    }

    .writing-page {
      max-width: 800px;
    }

    .page-header {
      margin-bottom: 4rem;
    }

    .breadcrumb {
      margin-bottom: 1rem;
    }

    .breadcrumb a {
      color: var(--color-link);
      text-decoration: none;
      font-size: 0.95rem;
      font-family: var(--font-ui);
      opacity: 0.7;
      transition: opacity 0.2s ease;
    }

    .breadcrumb a:hover {
      opacity: 1;
    }

    .page-header h1 {
      margin-bottom: 0.5rem;
      color: var(--color-primary);
    }

    .intro {
      font-size: 1.1rem;
      opacity: 0.85;
      line-height: 1.6;
    }

    .post-list {
      display: flex;
      flex-direction: column;
      gap: 3rem;
    }

    .post-preview {
      padding-bottom: 3rem;
      border-bottom: 1px solid var(--color-text);
      opacity: 0.95;
      transition: opacity 0.2s ease;
    }

    .post-preview:hover {
      opacity: 1;
    }

    .post-preview:last-child {
      border-bottom: none;
    }

    .post-preview h2 {
      margin-bottom: 0.75rem;
      font-size: clamp(1.5rem, 4vw, 2rem);
      margin-top: 0;
    }

    .post-preview h2 a {
      color: var(--color-text);
      text-decoration: none;
      transition: color 0.2s ease;
    }

    .post-preview h2 a:hover {
      color: var(--color-primary);
    }

    .meta {
      font-family: var(--font-ui);
      font-size: 0.95rem;
      opacity: 0.7;
      margin-bottom: 1rem;
      display: flex;
      align-items: center;
      gap: 1rem;
      flex-wrap: wrap;
    }

    .type-badge {
      display: inline-block;
      padding: 0.25rem 0.75rem;
      background: var(--color-primary);
      color: var(--color-cream);
      border-radius: 3px;
      font-size: 0.8rem;
      font-weight: 600;
      text-transform: lowercase;
      letter-spacing: 0.03em;
    }

    .excerpt {
      font-size: 1.05rem;
      line-height: 1.7;
      margin-bottom: 1rem;
      opacity: 0.9;
    }

    .tags {
      display: flex;
      gap: 0.75rem;
      flex-wrap: wrap;
      font-family: var(--font-ui);
      font-size: 0.9rem;
    }

    .tag {
      opacity: 0.6;
      transition: all 0.2s ease;
      font-weight: 500;
      color: var(--color-text);
      text-decoration: none;
    }

    .tag:hover {
      opacity: 1;
      color: var(--color-primary);
    }

    /* Floating Sidebar Styles */
    .sidebar {
      position: sticky;
      top: 2rem;
      align-self: start;
      height: fit-content;
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .sidebar-card {
      background: white;
      border-radius: 16px;
      overflow: hidden;
      box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
      display: flex;
      flex-direction: column;
      max-height: 400px;
    }

    .card-header {
      background: var(--color-mint);
      padding: 1.25rem 1.5rem;
      margin: 0;
      font-family: var(--font-sans);
      font-size: 1.5rem;
      font-weight: 600;
      text-align: center;
      color: var(--color-text);
      flex-shrink: 0;
    }

    .card-content {
      padding: 1.5rem;
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
      overflow-y: auto;
      flex: 1;
    }

    /* Scrollbar for card content */
    .card-content::-webkit-scrollbar {
      width: 8px;
    }

    .card-content::-webkit-scrollbar-track {
      background: rgba(0, 0, 0, 0.05);
      border-radius: 4px;
    }

    .card-content::-webkit-scrollbar-thumb {
      background: rgba(0, 0, 0, 0.2);
      border-radius: 4px;
    }

    .card-content::-webkit-scrollbar-thumb:hover {
      background: rgba(0, 0, 0, 0.3);
    }

    .sidebar-item {
      display: block;
      padding: 0.75rem 1rem;
      text-decoration: none;
      color: var(--color-text);
      transition: all 0.2s ease;
      font-family: var(--font-mono);
      font-size: 1rem;
      border-radius: 6px;
      text-decoration: underline;
      text-decoration-thickness: 1px;
      text-underline-offset: 3px;
    }

    .sidebar-item:hover {
      background: var(--color-mint);
      transform: translateX(4px);
    }

    .sidebar-item.active {
      background: var(--color-salmon);
      color: white;
      font-weight: 600;
      text-decoration: none;
    }

    .item-name {
      font-weight: 500;
    }

    /* Responsive */
    @media (max-width: 1024px) {
      .writing-page-container {
        grid-template-columns: 1fr;
      }

      .sidebar {
        position: static;
        max-height: none;
        margin-top: 3rem;
      }
    }

    @media (max-width: 768px) {
      .writing-page {
        padding: 0 1rem;
      }

      .page-header {
        margin-bottom: 3rem;
      }

      .post-list {
        gap: 2.5rem;
      }

      .post-preview {
        padding-bottom: 2.5rem;
      }

      .intro {
        font-size: 1rem;
      }

      .excerpt {
        font-size: 1rem;
      }

      .card-header {
        font-size: 1.25rem;
        padding: 1rem 1.25rem;
      }

      .card-content {
        padding: 1.25rem;
      }
    }
  </style>
</BaseLayout>